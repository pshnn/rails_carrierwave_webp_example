<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<table>
  <th>Original Image</th>
  <th>WebP version</th>
  <tr>
    <td><%= image_tag @post.image_url, width: '700px' %></td>
    <td><%= image_tag @post.image_url(:webp), width: '700px' %></td>
  </tr>
</table>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
